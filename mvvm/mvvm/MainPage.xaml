<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="mvvm.MainPage" BindingContext="{Binding MainPageViewModel, Source={StaticResource ViewModelLocator}}">

    <StackLayout>
        <Label FontSize="48" x:Name="ResultLabel" Text="{Binding Result}" />
        <Button x:Name="ClickMeButton" Command="{Binding Command}" FontSize="48" Text="Click Me!" />
    </StackLayout>

</ContentPage>
